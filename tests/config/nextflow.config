/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/

params {
    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input          = "${projectDir}/tests/data/test_samplesheet.csv"
    fasta          = "${projectDir}/tests/data/chr22.fasta"
    fai            = null
    haplotype_map  = "${projectDir}/tests/data/Homo_sapiens_assembly38.haplotype_database.txt"
    dict           = "${projectDir}/tests/data/chr22.dict"
    outdir         = "results"
    outputDir      = "results"
}

process {
    cpus   = 2
    memory = 3.GB
    time   = 2.h
}