{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/seqeralabs/nf-pipelines/master/assets/schema_input.json",
    "title": "seqeralabs/nf-pipelines pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "unique": [],
                "meta": ["id"]
            },
            "bam": {
                "type": "string",
                "pattern": "^\\S+\\.bam$",
                "format": "file-path",
                "errorMessage": "BAM file must be provided and must have extension '.bam'"
            }
        },
        "required": ["sample", "bam"]
    }
}
